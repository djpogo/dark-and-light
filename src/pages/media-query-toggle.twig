<script>
    const lightThemeChoosen = window.localStorage.getItem('light-theme') === 'true';
    const themeToggle = document.getElementById('theme-toggle');
    themeToggle.checked = lightThemeChoosen;
    if (lightThemeChoosen) {
        document.documentElement.dataset.theme = 'light';
    }
    themeToggle.addEventListener('change', () => {
        document.documentElement.dataset.theme = themeToggle.checked ? 'light' : 'dark';
        window.localStorage.setItem('light-theme', themeToggle.checked);
    });

</script>