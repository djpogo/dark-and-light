<div class="multi-toggle" data-js-{{dataJs}}={{name}}>
    <div class="multi-toggle__label">{{ label }}</div>
    {% for item in items %}
    <div class="multitoggle__item{% if item.active %} multitoggle__item--active{% endif %}" data-toggle="{{ item.toggle }}">
        <input type="radio" name="{{ name }}" value="{{ item.value }}" id="{{ name ~ '-' ~ loop.index }}" {{ item.value == default ? 'checked' : ''}}>
        <label for="{{ name ~ '-' ~ loop.index }}">{{ item.label }}</label>
    </div>
    {% endfor %}
</div>